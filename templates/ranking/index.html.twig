{% extends 'base.html.twig' %}

{% block title %}NDLP - Cross du coll√®ge{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    <h3>{{ message }}</h3>
    {# <h1>Classement</h1> #}


    <table class="table">
        <tr>
            <th scope="col">{% trans %}Ranking{% endtrans %}</th>
            <th scope="col">{% trans %}Student{% endtrans %}</th>
            <th scope="col">{% trans %}Start times{% endtrans %}</th>
            <th scope="col">{% trans %}Arrival times{% endtrans %}</th>
            <th scope="col">{% trans %}Chronometer{% endtrans %}</th>
        </tr>
        {% set classement = 1 %}
        {% for row in rows %}
        <tr>
            <td>{{ classement }}</td>
            <td>{{ row.student.firstname }} {{ row.student.lastname }}</td>
            <td>{{ startfr }}</td>
            {# <td>{{ row.start|date("d/m/Y H:i:s") }}</td> #}
            <td>{{ row.end|date("d/m/Y H:i:s") }}</td>
            <td>{{ chronometres[row.getStudent().getId()] }}</td> 
        </tr>
        {% set classement = classement + 1 %}
        {% endfor %}   
        {{ error_message }}
    </table>


</div>
{% endblock %}